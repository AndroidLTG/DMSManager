                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btn20ptmon"
                            android:layout_weight="1"
                            android:text="20%"
                            android:background="@drawable/button_selector_key"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btn30ptmon"
                            android:text="30%"
                            android:textSize="@dimen/text_size"
                            android:layout_weight="1"
                            android:background="@drawable/button_selector_key"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btn40ptmon"
                            android:text="40%"
                            android:background="@drawable/button_selector_key"
                            android:textSize="@dimen/text_size"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btn50ptmon"
                            android:text="50%"
                            android:background="@drawable/button_selector_key"
                            android:textSize="@dimen/text_size"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btn100ptmon"
                            android:text="100%"
                            android:background="@drawable/button_selector_key"
                            android:textSize="@dimen/text_size"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btnsokhacmon"
                            android:text="Số khác"
                            android:background="@drawable/button_selector_key"
                            android:textSize="@dimen/text_size"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:weightSum="8"
                        android:layout_weight="1"
                        android:layout_height="match_parent" >


                        <Button
                            android:layout_weight="1"
                            android:id="@+id/btn0tienmon"
                            android:text="0"
                            android:background="@drawable/button_selector_key"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:text="10.000"
                            android:background="@drawable/button_selector_key"
                            android:textSize="@dimen/text_size"
                            android:id="@+id/btn10tienmon"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:layout_weight="1"
                            android:background="@drawable/button_selector_key"
                            android:id="@+id/btn20tienmon"
                            android:text="20.000"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:layout_weight="1"
                            android:background="@drawable/button_selector_key"
                            android:id="@+id/btn30tienmon"
                            android:text="30.000"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:layout_weight="1"
                            android:background="@drawable/button_selector_key"
                            android:id="@+id/btn40tienmon"
                            android:text="40.000"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:layout_weight="1"
                            android:background="@drawable/button_selector_key"
                            android:id="@+id/btn50tienmon"
                            android:text="50.000"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:layout_weight="1"
                            android:id="@+id/btn100tienmon"
                            android:textSize="@dimen/text_size"
                            android:background="@drawable/button_selector_key"
                            android:text="100.000"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btnsokhactienmon"
                            android:textSize="@dimen/text_size"
                            android:background="@drawable/button_selector_key"
                            android:layout_weight="1"
                            android:text="Số khác"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    <Button
        android:id="@+id/btnxacnhangiamgia"
        android:text="XÁC NHẬN"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custombuttoncn"
        android:layout_width="match_parent"
        android:layout_height="30dp" />




</RelativeLayout>
