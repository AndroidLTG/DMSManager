                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <TextView
                    android:id="@+id/txtgiamtheohoadon"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size"
                    android:text="GIẢM 10%"
                    android:textStyle="bold"
                    android:background="@drawable/customeditthanhtoan"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:inputType="textMultiLine" />
                <LinearLayout
                    android:layout_weight="8"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:weightSum="8"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/btn0pthd"
                            android:layout_weight="1"
                            android:text="0%"
                            android:background="@drawable/button_selector_key"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btn10pthd"
                            android:background="@drawable/button_selector_key"
                            android:layout_weight="1"
                            android:text="10%"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btn20pthd"
                            android:background="@drawable/button_selector_key"
                            android:layout_weight="1"
                            android:text="20%"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btn30pthd"
                            android:background="@drawable/button_selector_key"
                            android:text="30%"
                            android:textSize="@dimen/text_size"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btn40pthd"
                            android:background="@drawable/button_selector_key"
                            android:text="40%"
                            android:textSize="@dimen/text_size"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btn50pthd"
                            android:background="@drawable/button_selector_key"
                            android:text="50%"
                            android:textSize="@dimen/text_size"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btn100pthd"
                            android:background="@drawable/button_selector_key"
                            android:text="100%"
                            android:textSize="@dimen/text_size"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btnsokhachd"
                            android:background="@drawable/button_selector_key"
                            android:text="Số khác"
                            android:textSize="@dimen/text_size"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:weightSum="8"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <Button
                            android:layout_weight="1"
                            android:background="@drawable/button_selector_key"
                            android:id="@+id/btn0tienhd"
                            android:text="0"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:text="10.000"
                            android:background="@drawable/button_selector_key"
                            android:textSize="@dimen/text_size"
                            android:id="@+id/btn10tienhd"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:layout_weight="1"
                            android:background="@drawable/button_selector_key"
                            android:id="@+id/btn20tienhd"
                            android:text="20.000"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
