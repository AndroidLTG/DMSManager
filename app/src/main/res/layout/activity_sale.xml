                            android:layout_weight="1"
                            android:id="@+id/btn30tienhd"
                            android:background="@drawable/button_selector_key"
                            android:text="30.000"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:layout_weight="1"
                            android:id="@+id/btn40tienhd"
                            android:text="40.000"
                            android:background="@drawable/button_selector_key"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:id="@+id/btn50tienhd"
                            android:layout_weight="1"
                            android:text="50.000"
                            android:background="@drawable/button_selector_key"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:layout_weight="1"
                            android:background="@drawable/button_selector_key"
                            android:id="@+id/btn100tienhd"
                            android:text="100.000"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                        <Button
                            android:layout_weight="1"
                            android:background="@drawable/button_selector_key"
                            android:id="@+id/btnsokhactienhd"
                            android:text="Số khác"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
                    </LinearLayout>
                </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:weightSum="10"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/txttheomon"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size"
                    android:text="THEO MÓN"
                    android:background="@drawable/customedittext"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <Spinner
                    android:id="@+id/spinchonmon"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:touchscreenBlocksFocus="false"></Spinner>
                <LinearLayout
                    android:layout_weight="8"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:weightSum="8"
                        android:layout_weight="1"
                        android:layout_height="match_parent" >

                        <Button
                            android:id="@+id/btn0ptmon"
                            android:layout_weight="1"
                            android:text="0%"
                            android:background="@drawable/button_selector_key"
                            android:textSize="@dimen/text_size"
                            android:layout_width="match_parent"
                            android:layout_height="0dp" />
